{
  "extends": "@jaeheesong-ktc/typescript-config/index.json",
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "declaration": true, // 타입 정의 파일 생성
    "declarationDir": "dist/types", // 타입 정의 파일이 생성될 경로
    "outDir": "dist", // 빌드 결과물이 생성될 경로
    "emitDeclarationOnly": true, // JavaScript 파일은 생성하지 않고 타입 정의 파일만 생성
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": false,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "build",
    "node_modules",
    ".turbo"
  ]
}


